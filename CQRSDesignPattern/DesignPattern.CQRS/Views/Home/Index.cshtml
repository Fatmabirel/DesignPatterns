@model List<DesignPattern.CQRS.CQRS.Results.GetProductQueryResult>

@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<div class="container">
    <br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Ürün Adı</th>
            <th>Fiyat</th>
            <th>Stok</th>
            <th>Getir</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.ProductName</td>
                <td>@item.Price ₺</td>
                <td>@item.Stock</td>
                <td><a href="/Home/GetProduct/@item.Id" class="btn btn-dark">Getir</a></td>
                <td><a href="/Home/DeleteProduct/@item.Id" class="btn btn-danger">Sil</a></td>
                <td><a href="/Home/UpdateProduct/@item.Id" class="btn btn-warning">Güncelle</a></td>
            </tr>
        }
    </table>
    <a href="/Home/AddProduct/" class="btn btn-primary">Yeni Ürün Girişi</a>
</div>